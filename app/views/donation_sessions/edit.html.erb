<div class="general-container">
  <div class="avatar-grid">
    <div>
      <h1>Hi <span class="pink"> <%= current_user.first_name %> </span></h1>
      <h2>Welcome home</h2>
    </div><div class="avatar"></div>
  </div>

  <div class= remaining-budget>
    <p class= "secondary_information"> Your remaining anual budget:</p>
    <h2 class= "secondary_information"><%= current_user.donation_budget %> â‚¬</h2>
  </div>

  <div class= actual-donation>
    <p>Your actual donation :</p>
    <%# <h2><%= current_user.donation_sessions.total_amount %></h2> %>
  </div>

  <%= simple_form_for :donation_sessions, url: donation_session_path(@donation_session), method: :patch  do |f| %>
    <%@donations.each do |donation|%>

      <div class="list-asso">
        <div class="donation-grid">
          <%= image_tag url_for(donation.nonprofit.photo) %>
          <p> <%= donation.nonprofit.name %> </p>
          <div class="donation-case">
            <%= f.input :amount,
                        input_html: {name: "amount[nonprofit-id-#{donation.nonprofit.id}][]", type: :number, placeholder: "8" } %>
          </div>
        </div>
      </div>
    <%end %>

      <%= f.button :submit, "Validate", class: "btn btn-1 mt-5" %>

  <% end %>

</div>
